{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute tax-db --local --file=./src/db/schema.sql",
    "db:migrate:prod": "wrangler d1 execute tax-db --file=./src/db/schema.sql",
    "db:seed": "wrangler d1 execute tax-db --local --file=./src/db/seed.sql"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "@anthropic-ai/sdk": "^0.32.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "typescript": "^5.6.0",
    "wrangler": "^3.91.0"
  }
}
