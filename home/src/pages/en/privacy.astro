---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n/translations';

const lang = 'en';
const t = translations[lang];
---

<Layout lang={lang} title={`${t.footer.privacy} | Tax Pre-Process`}>
  <Header lang={lang} />
  <main class="pt-20">
    <section class="py-16 lg:py-24">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">{t.privacy.title}</h1>
        <p class="text-gray-600 mb-8">{t.privacy.lastUpdated}</p>
        <div class="prose prose-lg max-w-none">
          <section class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.privacy.section1Title}</h2>
            <p class="text-gray-600 mb-4">{t.privacy.section1Content}</p>
          </section>
          <section class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.privacy.section2Title}</h2>
            <p class="text-gray-600 mb-4">{t.privacy.section2Content}</p>
            <ul class="list-disc list-inside text-gray-600 space-y-2">
              {t.privacy.section2Items.map((item: string) => (<li>{item}</li>))}
            </ul>
          </section>
          <section class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.privacy.section3Title}</h2>
            <p class="text-gray-600 mb-4">{t.privacy.section3Content}</p>
            <ul class="list-disc list-inside text-gray-600 space-y-2">
              {t.privacy.section3Items.map((item: string) => (<li>{item}</li>))}
            </ul>
          </section>
          <section class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.privacy.section4Title}</h2>
            <p class="text-gray-600 mb-4">{t.privacy.section4Content}</p>
          </section>
          <section class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.privacy.section5Title}</h2>
            <p class="text-gray-600 mb-4">{t.privacy.section5Content}</p>
          </section>
          <section class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.privacy.section6Title}</h2>
            <p class="text-gray-600">{t.privacy.section6Content}</p>
          </section>
        </div>
      </div>
    </section>
  </main>
  <Footer lang={lang} />
</Layout>
