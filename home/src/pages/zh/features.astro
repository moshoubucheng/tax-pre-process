---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Solution from '../../components/sections/Solution.astro';
import HowItWorks from '../../components/sections/HowItWorks.astro';
import CTA from '../../components/sections/CTA.astro';
import { translations } from '../../i18n/translations';

const lang = 'zh';
const t = translations[lang];
---

<Layout lang={lang} title={`${t.nav.features} | Tax Pre-Process`}>
  <Header lang={lang} />
  <main class="pt-20">
    <section class="py-16 lg:py-24 bg-gradient-to-b from-primary-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{t.features.title}</h1>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">{t.features.subtitle}</p>
      </div>
    </section>
    <Solution lang={lang} />
    <HowItWorks lang={lang} />
    <section class="py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-4">{t.features.aiTitle}</h2>
            <p class="text-gray-600 mb-6">{t.features.aiDesc}</p>
            <ul class="space-y-3">
              {t.features.aiFeatures.map((feature: string) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="bg-gray-100 rounded-2xl aspect-video flex items-center justify-center">
            <div class="text-center p-8">
              <div class="w-16 h-16 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <p class="text-gray-500 text-sm">{t.features.aiDemo}</p>
            </div>
          </div>
        </div>
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1 bg-gray-100 rounded-2xl aspect-video flex items-center justify-center">
            <div class="text-center p-8">
              <div class="w-16 h-16 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <p class="text-gray-500 text-sm">{t.features.securityDemo}</p>
            </div>
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">{t.features.securityTitle}</h2>
            <p class="text-gray-600 mb-6">{t.features.securityDesc}</p>
            <ul class="space-y-3">
              {t.features.securityFeatures.map((feature: string) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>
    <CTA lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
