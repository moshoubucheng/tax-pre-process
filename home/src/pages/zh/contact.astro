---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n/translations';

const lang = 'zh';
const t = translations[lang];
---

<Layout lang={lang} title={`${t.nav.contact} | Tax Pre-Process`}>
  <Header lang={lang} />
  <main class="pt-20">
    <section class="py-16 lg:py-24 bg-gradient-to-b from-primary-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{t.contact.title}</h1>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">{t.contact.subtitle}</p>
      </div>
    </section>
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12">
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">{t.contact.formTitle}</h2>
            <form class="space-y-6" action="https://formspree.io/f/xkoorbvl" method="POST">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">{t.contact.name}</label>
                <input type="text" id="name" name="name" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors" placeholder={t.contact.namePlaceholder} />
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-2">{t.contact.company}</label>
                <input type="text" id="company" name="company" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors" placeholder={t.contact.companyPlaceholder} />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">{t.contact.email}</label>
                <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors" placeholder={t.contact.emailPlaceholder} />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">{t.contact.phone}</label>
                <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors" placeholder={t.contact.phonePlaceholder} />
              </div>
              <div>
                <label for="inquiry" class="block text-sm font-medium text-gray-700 mb-2">{t.contact.inquiryType}</label>
                <select id="inquiry" name="inquiry" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors">
                  <option value="trial">{t.contact.inquiryTrial}</option>
                  <option value="demo">{t.contact.inquiryDemo}</option>
                  <option value="pricing">{t.contact.inquiryPricing}</option>
                  <option value="support">{t.contact.inquirySupport}</option>
                  <option value="other">{t.contact.inquiryOther}</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">{t.contact.message}</label>
                <textarea id="message" name="message" rows="4" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors resize-none" placeholder={t.contact.messagePlaceholder}></textarea>
              </div>
              <button type="submit" class="w-full py-3 px-6 rounded-lg bg-primary-600 text-white font-semibold hover:bg-primary-700 transition-colors">{t.contact.submit}</button>
            </form>
          </div>
          <div class="space-y-8">
            <div class="bg-gray-50 rounded-2xl p-8">
              <h3 class="text-xl font-semibold text-gray-900 mb-6">{t.contact.infoTitle}</h3>
              <div class="space-y-4">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-lg bg-primary-100 text-primary-600 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">{t.contact.companyName}</div>
                    <div class="text-gray-600">{t.footer.company}</div>
                  </div>
                </div>
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-lg bg-primary-100 text-primary-600 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">{t.contact.addressLabel}</div>
                    <div class="text-gray-600">{t.footer.address}</div>
                  </div>
                </div>
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-lg bg-primary-100 text-primary-600 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">{t.contact.phoneLabel}</div>
                    <div class="text-gray-600">050-6868-2230</div>
                  </div>
                </div>
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-lg bg-primary-100 text-primary-600 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">{t.contact.emailLabel}</div>
                    <div class="text-gray-600">info@japantpp.com</div>
                  </div>
                </div>
              </div>
            </div>
            <div class="bg-gradient-to-br from-primary-600 to-accent-600 rounded-2xl p-8 text-white">
              <h3 class="text-xl font-semibold mb-4">{t.contact.trialTitle}</h3>
              <p class="text-white/80 mb-6">{t.contact.trialDesc}</p>
              <ul class="space-y-2 mb-6">
                {t.contact.trialFeatures.map((feature: string) => (
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    <span class="text-sm">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer lang={lang} />
</Layout>
