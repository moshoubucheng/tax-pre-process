---
import { translations, type Lang, defaultLang, getPathWithLang } from '../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = translations[lang];
const currentPath = Astro.url.pathname;

// Get base path without language prefix
const basePath = currentPath.replace(/^\/(en|zh)/, '') || '/';

const languages = [
  { code: 'ja', label: '日本語', path: basePath },
  { code: 'zh', label: '中文', path: `/zh${basePath}` },
  { code: 'en', label: 'English', path: `/en${basePath}` },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={getPathWithLang('/', lang)} class="flex items-center gap-2">
        <div class="w-8 h-8 rounded-lg gradient-hero flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <span class="font-bold text-xl text-gray-900">Tax Pre-Process</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <a href={getPathWithLang('/', lang)} class="text-gray-600 hover:text-primary-600 transition-colors">{t.nav.home}</a>
        <a href={getPathWithLang('/features', lang)} class="text-gray-600 hover:text-primary-600 transition-colors">{t.nav.features}</a>
        <a href={getPathWithLang('/pricing', lang)} class="text-gray-600 hover:text-primary-600 transition-colors">{t.nav.pricing}</a>
        <a href={getPathWithLang('/faq', lang)} class="text-gray-600 hover:text-primary-600 transition-colors">{t.nav.faq}</a>
        <a href={getPathWithLang('/contact', lang)} class="text-gray-600 hover:text-primary-600 transition-colors">{t.nav.contact}</a>
      </nav>

      <!-- Right Side -->
      <div class="flex items-center gap-4">
        <!-- Language Switcher -->
        <div class="relative group">
          <button class="flex items-center gap-1 text-gray-600 hover:text-primary-600 transition-colors text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            <span>{lang === 'ja' ? '日本語' : lang === 'zh' ? '中文' : 'English'}</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute right-0 top-full mt-2 py-2 w-32 bg-white rounded-lg shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
            {languages.map((l) => (
              <a
                href={l.path}
                class={`block px-4 py-2 text-sm hover:bg-gray-50 ${lang === l.code ? 'text-primary-600 font-medium' : 'text-gray-600'}`}
              >
                {l.label}
              </a>
            ))}
          </div>
        </div>

        <!-- Login Link -->
        <a
          href="https://my.japantpp.com"
          class="hidden sm:inline-flex items-center text-gray-600 hover:text-primary-600 transition-colors font-medium"
        >
          {t.nav.login}
        </a>

        <!-- CTA Button -->
        <a
          href={getPathWithLang('/contact', lang)}
          class="hidden sm:inline-flex items-center px-4 py-2 rounded-lg bg-primary-600 text-white font-medium hover:bg-primary-700 transition-colors"
        >
          {t.nav.freeTrial}
        </a>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600 hover:text-primary-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100">
    <div class="px-4 py-4 space-y-3">
      <a href={getPathWithLang('/', lang)} class="block text-gray-600 hover:text-primary-600 py-2">{t.nav.home}</a>
      <a href={getPathWithLang('/features', lang)} class="block text-gray-600 hover:text-primary-600 py-2">{t.nav.features}</a>
      <a href={getPathWithLang('/pricing', lang)} class="block text-gray-600 hover:text-primary-600 py-2">{t.nav.pricing}</a>
      <a href={getPathWithLang('/faq', lang)} class="block text-gray-600 hover:text-primary-600 py-2">{t.nav.faq}</a>
      <a href={getPathWithLang('/contact', lang)} class="block text-gray-600 hover:text-primary-600 py-2">{t.nav.contact}</a>
      <a href="https://my.japantpp.com" class="block text-gray-600 hover:text-primary-600 py-2">{t.nav.login}</a>
      <div class="pt-3 border-t border-gray-100">
        <a
          href={getPathWithLang('/contact', lang)}
          class="block text-center px-4 py-2 rounded-lg bg-primary-600 text-white font-medium hover:bg-primary-700"
        >
          {t.nav.freeTrial}
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
