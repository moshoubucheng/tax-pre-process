---
import { translations, type Lang, defaultLang, getPathWithLang } from '../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = translations[lang];
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 rounded-lg gradient-hero flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <span class="font-bold text-xl">Tax Pre-Process</span>
        </div>
        <p class="text-gray-400 mb-4 max-w-md">
          {t.footer.description}
        </p>
        <div class="space-y-2 text-sm text-gray-400">
          <p>{t.footer.company}</p>
          <p>{t.footer.address}</p>
          <p>{t.footer.phone}</p>
          <p>{t.footer.email}</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-lg mb-4">{t.footer.links}</h3>
        <ul class="space-y-2">
          <li>
            <a href={getPathWithLang('/', lang)} class="text-gray-400 hover:text-white transition-colors">
              {t.nav.home}
            </a>
          </li>
          <li>
            <a href={getPathWithLang('/features', lang)} class="text-gray-400 hover:text-white transition-colors">
              {t.nav.features}
            </a>
          </li>
          <li>
            <a href={getPathWithLang('/pricing', lang)} class="text-gray-400 hover:text-white transition-colors">
              {t.nav.pricing}
            </a>
          </li>
          <li>
            <a href={getPathWithLang('/faq', lang)} class="text-gray-400 hover:text-white transition-colors">
              {t.nav.faq}
            </a>
          </li>
          <li>
            <a href={getPathWithLang('/contact', lang)} class="text-gray-400 hover:text-white transition-colors">
              {t.nav.contact}
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="font-semibold text-lg mb-4">{t.footer.legal}</h3>
        <ul class="space-y-2">
          <li>
            <a href={getPathWithLang('/privacy', lang)} class="text-gray-400 hover:text-white transition-colors">
              {t.footer.privacy}
            </a>
          </li>
          <li>
            <a href={getPathWithLang('/terms', lang)} class="text-gray-400 hover:text-white transition-colors">
              {t.footer.terms}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">
        {t.footer.copyright}
      </p>
      <div class="flex items-center gap-4">
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
