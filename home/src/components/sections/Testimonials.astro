---
import { translations, type Lang, defaultLang } from '../../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = translations[lang];

const testimonials = [
  {
    quote: t.testimonials.quote1,
    author: t.testimonials.author1,
    role: t.testimonials.role1,
    avatar: 'T',
  },
  {
    quote: t.testimonials.quote2,
    author: t.testimonials.author2,
    role: t.testimonials.role2,
    avatar: 'S',
  },
  {
    quote: t.testimonials.quote3,
    author: t.testimonials.author3,
    role: t.testimonials.role3,
    avatar: 'Y',
  },
];
---

<section class="py-16 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        {t.testimonials.title}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {t.testimonials.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
          <div class="flex gap-1 mb-4">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <p class="text-gray-600 mb-6 leading-relaxed">"{testimonial.quote}"</p>

          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full gradient-hero text-white flex items-center justify-center font-semibold">
              {testimonial.avatar}
            </div>
            <div>
              <div class="font-medium text-gray-900">{testimonial.author}</div>
              <div class="text-sm text-gray-500">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust Badges -->
    <div class="mt-16 text-center">
      <p class="text-sm text-gray-500 mb-6">{t.testimonials.trustTitle}</p>
      <div class="flex flex-wrap items-center justify-center gap-8">
        <div class="flex items-center gap-2 text-gray-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span class="font-medium">{t.testimonials.trust1}</span>
        </div>
        <div class="flex items-center gap-2 text-gray-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <span class="font-medium">{t.testimonials.trust2}</span>
        </div>
        <div class="flex items-center gap-2 text-gray-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="font-medium">{t.testimonials.trust3}</span>
        </div>
      </div>
    </div>
  </div>
</section>
