---
import { translations, type Lang, defaultLang } from '../../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = translations[lang];

const painPoints = [
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    title: t.painPoints.item1Title,
    description: t.painPoints.item1Desc,
    stat: '60%',
    statLabel: t.painPoints.item1Stat,
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>`,
    title: t.painPoints.item2Title,
    description: t.painPoints.item2Desc,
    stat: '2024',
    statLabel: t.painPoints.item2Stat,
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" /></svg>`,
    title: t.painPoints.item3Title,
    description: t.painPoints.item3Desc,
    stat: '50%',
    statLabel: t.painPoints.item3Stat,
  },
];
---

<section class="py-16 lg:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        {t.painPoints.title}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {t.painPoints.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {painPoints.map((point, index) => (
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-shadow border border-gray-100">
          <div class="w-12 h-12 rounded-xl bg-red-50 text-red-500 flex items-center justify-center mb-4">
            <Fragment set:html={point.icon} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{point.title}</h3>
          <p class="text-gray-600 mb-4">{point.description}</p>
          <div class="pt-4 border-t border-gray-100">
            <div class="text-2xl font-bold text-red-500">{point.stat}</div>
            <div class="text-sm text-gray-500">{point.statLabel}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
