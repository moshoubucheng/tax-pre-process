---
import { translations, type Lang, defaultLang, getPathWithLang } from '../../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = translations[lang];
---

<section class="relative pt-24 pb-16 lg:pt-32 lg:pb-24 overflow-hidden">
  <!-- Background Gradient -->
  <div class="absolute inset-0 gradient-hero opacity-5"></div>
  <div class="absolute top-20 right-0 w-96 h-96 bg-primary-400 rounded-full filter blur-3xl opacity-20 animate-pulse-slow"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-accent-500 rounded-full filter blur-3xl opacity-20 animate-pulse-slow"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="text-center lg:text-left">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-50 text-primary-700 text-sm font-medium mb-6">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          {t.hero.badge}
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
          {t.hero.title}
          <span class="gradient-text block">{t.hero.titleHighlight}</span>
        </h1>

        <p class="text-lg text-gray-600 mb-8 max-w-xl mx-auto lg:mx-0">
          {t.hero.description}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href="https://my.japantpp.com"
            class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-primary-600 text-white font-semibold hover:bg-primary-700 transition-all transform hover:scale-105 shadow-lg shadow-primary-600/25"
          >
            {t.hero.ctaPrimary}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href={getPathWithLang('/features', lang)}
            class="inline-flex items-center justify-center px-6 py-3 rounded-lg border-2 border-gray-200 text-gray-700 font-semibold hover:border-primary-600 hover:text-primary-600 transition-all"
          >
            {t.hero.ctaSecondary}
          </a>
        </div>

        <!-- Trust Badges -->
        <div class="mt-10 pt-8 border-t border-gray-100">
          <p class="text-sm text-gray-500 mb-4">{t.hero.trustedBy}</p>
          <div class="flex flex-wrap items-center justify-center lg:justify-start gap-6">
            <div class="flex items-center gap-2 text-gray-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span class="text-sm">{t.hero.badge1}</span>
            </div>
            <div class="flex items-center gap-2 text-gray-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span class="text-sm">{t.hero.badge2}</span>
            </div>
            <div class="flex items-center gap-2 text-gray-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm">{t.hero.badge3}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Visual -->
      <div class="relative">
        <div class="relative bg-white rounded-2xl shadow-2xl p-6 animate-float">
          <!-- Mock Dashboard -->
          <div class="bg-gray-50 rounded-xl p-4">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-3 h-3 rounded-full bg-red-400"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <!-- Receipt Preview -->
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <div class="w-full h-24 bg-gradient-to-br from-gray-100 to-gray-200 rounded mb-2 flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <div class="text-xs text-gray-500">receipt_001.jpg</div>
              </div>
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <div class="space-y-2">
                  <div class="flex justify-between text-xs">
                    <span class="text-gray-500">日付</span>
                    <span class="text-gray-900 font-medium">2024/01/15</span>
                  </div>
                  <div class="flex justify-between text-xs">
                    <span class="text-gray-500">金額</span>
                    <span class="text-gray-900 font-medium">¥12,500</span>
                  </div>
                  <div class="flex justify-between text-xs">
                    <span class="text-gray-500">店舗</span>
                    <span class="text-gray-900 font-medium">セブンイレブン</span>
                  </div>
                  <div class="mt-2 px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full text-center">
                    AI 読取完了
                  </div>
                </div>
              </div>
            </div>
            <!-- Progress Bar -->
            <div class="mt-4">
              <div class="flex justify-between text-xs text-gray-500 mb-1">
                <span>処理中</span>
                <span>85%</span>
              </div>
              <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
                <div class="h-full bg-gradient-to-r from-primary-500 to-accent-500 rounded-full" style="width: 85%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Floating Elements (hidden on mobile) -->
        <div class="hidden lg:block absolute -top-4 -right-4 bg-white rounded-lg shadow-lg p-3 animate-float" style="animation-delay: 0.5s">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <div class="text-xs font-medium text-gray-900">AI 精度</div>
              <div class="text-sm font-bold text-green-600">98.5%</div>
            </div>
          </div>
        </div>

        <div class="hidden lg:block absolute -bottom-4 -left-4 bg-white rounded-lg shadow-lg p-3 animate-float" style="animation-delay: 1s">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-full bg-primary-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="text-xs font-medium text-gray-900">処理時間</div>
              <div class="text-sm font-bold text-primary-600">2秒</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
