---
import { translations, type Lang, defaultLang, getPathWithLang } from '../../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = translations[lang];
---

<section class="py-16 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative rounded-3xl overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0 gradient-tech"></div>
      <div class="absolute inset-0 bg-black/20"></div>

      <!-- Content -->
      <div class="relative px-8 py-16 sm:px-16 sm:py-20 text-center">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
          {t.cta.title}
        </h2>
        <p class="text-lg text-white/80 max-w-2xl mx-auto mb-8">
          {t.cta.description}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={getPathWithLang('/contact', lang)}
            class="inline-flex items-center justify-center px-8 py-4 rounded-lg bg-white text-primary-600 font-semibold hover:bg-gray-100 transition-all transform hover:scale-105 shadow-lg"
          >
            {t.cta.primary}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href={getPathWithLang('/features', lang)}
            class="inline-flex items-center justify-center px-8 py-4 rounded-lg border-2 border-white/50 text-white font-semibold hover:bg-white/10 transition-all"
          >
            {t.cta.secondary}
          </a>
        </div>

        <p class="mt-6 text-sm text-white/60">
          {t.cta.note}
        </p>
      </div>
    </div>
  </div>
</section>
